<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naughtyspirit.uniinfosystemclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.naughtyspirit.uniinfosystemclient.activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.naughtyspirit.uniinfosystemclient.activities.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.naughtyspirit.uniinfosystemclient.activities.LoginActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>