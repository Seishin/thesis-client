<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/header_bg_end"
                android:startColor="@color/header_bg_start" />

            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:radius="8dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

            <stroke
                android:width="1dp"
                android:color="#9dab03" />
        </shape>
    </item>

</layer-list>